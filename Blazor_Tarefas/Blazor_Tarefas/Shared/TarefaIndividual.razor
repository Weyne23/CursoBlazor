<td><button @onclick="@(() => removerTarefa.InvokeAsync(item))"><i class="oi oi-trash"></i></button></td>
<td>@item.DataCriacao</td>
<td>@item.Descricao</td>
<td><input type="checkbox" @bind="@item.Concluida" />@item.Concluida</td>

@code {
    [Parameter] public Tarefa item { get; set; }
    [Parameter] public EventCallback<Tarefa> removerTarefa { get; set; }
}
